<%= @operation = params[:operation]
			@number1 = params[:number1].to_i
			@number2 = params[:number2].to_i

			case @operation
				when "add"
					@number1 + @number2
				when "subtract"
					@number1 - @number2
				when "divide"
					@number1 / @number2
				else
					"invalid input"
					break
			end
		 %>